{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "applications": {
        "gecko": {
            "id": "mazheng367@qq.com",
            "strict_min_version": "60.0"
        }
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/icon.ico"
        },
        "default_title": "open mg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.36mh.com/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background-main.js"
        ]
    },
    "permissions": [
        "nativeMessaging"
    ]
}